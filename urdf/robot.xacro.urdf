<?xml version="1.0"?>
<robot name="diff_drive"
    xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>


    <link name="base_link"/>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
    </joint>

    <!-- Base Link -->
    <link name="chassis_link">
        <collision>
            <origin xyz="-0.151427 -0 0.5" rpy="0 0 0"/>
            <geometry>
                <box size="2.01142 1 0.568726"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="-0.151427 -0 0.5" rpy="0 0 0"/>
            <geometry>
                <box size="2.01142 1 0.568726"/>
            </geometry>
            <material name="blue" />
        </visual>
        <inertial>
            <origin xyz="-0.151427 -0 0.5" rpy="0 0 0"/>
            <mass value="1.14395"/>
            <inertia ixx="0.126164" ixy="0.0" ixz="0.0" iyy="0.416519" iyz="0.0" izz="0.481014"/>
        </inertial>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.554283 0.625029 0.3" rpy="-1.5707 0 0"/>
        <parent link="chassis_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.2"/>
    </joint>

    <!-- left wheel Link -->
    <link name="left_wheel">
        <collision>
            <geometry>
                <sphere radius="0.3"/>
            </geometry>
        </collision>
        <visual>
            <geometry>
                <sphere radius="0.3"/>
            </geometry>
            <material name="black" />
        </visual>
        <inertial>
            <mass value="2"/>
            <inertia ixx="0.145833" ixy="0.0" ixz="0.0" iyy="0.145833" iyz="0.0" izz="0.125"/>
        </inertial>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.554283 -0.625029 0.3" rpy="-1.5707 0 0"/>
        <parent link="chassis_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.2"/>
    </joint>

    <!-- right wheel Link -->
    <link name="right_wheel">
        <collision>
            <geometry>
                <sphere radius="0.3"/>
            </geometry>
        </collision>
        <visual>
            <geometry>
                <sphere radius="0.3"/>
            </geometry>
            <material name="black" />

        </visual>
        <inertial>
            <mass value="2"/>
            <inertia ixx="0.145833" ixy="0.0" ixz="0.0" iyy="0.145833" iyz="0.0" izz="0.125"/>
        </inertial>
    </link>

    <joint name="caster_joint" type="fixed">
        <origin xyz="-0.957138 -0 0.2" rpy="0 0 0"/>
        <parent link="chassis_link"/>
        <child link="caster"/>
    </joint>

    <!-- caster frontal wheel Link -->
    <link name="caster">
        <collision>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
        </collision>
        <visual>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
            <material name="white" />
        </visual>
        <inertial>
            <origin xyz="-0.957138 -0 0.2" rpy="0 0 0"/>
            <mass value="0.005"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>


    <joint name="imu_joint" type="fixed">
        <origin xyz="0.554283 0 1.0" rpy="0 0 0"/>
        <parent link="chassis_link"/>
        <child link="imu_link"/>
    </joint>

    <link name="imu_link">
        <collision>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
        </collision>
        <visual>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
            <material name="white" />

        </visual>
        <inertial>
            <origin xyz="0.554283 0 1.0" rpy="-0.1 0.3 -1.77"/>
            <mass value="0.005"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>

    <joint name="gnss_joint" type="fixed">
        <origin xyz="0.554282 0 1.5" rpy="0 0 0"/>
        <parent link="chassis_link"/>
        <child link="gnss_link"/>
    </joint>

    <link name="gnss_link">
        <collision>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
        </collision>
        <visual>
            <geometry>
                <sphere radius="0.2"/>
            </geometry>
            <material name="black" />
        </visual>
        <inertial>
            <origin xyz="0.554282 0 1.5" rpy="0.3 1.6 -0.4"/>
            <mass value="0.005"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>


    <ros2_control name="IgnitionSystem" type="system">
        <hardware>
            <plugin>ign_ros2_control/IgnitionSystem</plugin>
        </hardware>
        <joint name="left_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-1</param>
                <param name="max">1</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
        <joint name="right_wheel_joint">
            <command_interface name="velocity">
                <param name="min">-1</param>
                <param name="max">1</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>


    <gazebo reference="imu_link">
        <sensor name="GazeboIMU" type="imu">
            <always_on>1</always_on>
            <update_rate>5.0</update_rate>
            <visualize>true</visualize>
            <topic>imu</topic>
            <ignition_frame_id>imu_link</ignition_frame_id>
        </sensor>
    </gazebo>

    <gazebo reference="gnss_link">
        <sensor name="GazeboNavSat" type="navsat">
            <always_on>1</always_on>
            <update_rate>5.0</update_rate>
            <visualize>true</visualize>
            <topic>gps/fix</topic>
            <ignition_frame_id>gnss_link</ignition_frame_id>
        </sensor>
    </gazebo>
    <gazebo>

        <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
            <parameters>$(find nav2_outdoor_example)/config/diff_drive_controller_velocity.yaml</parameters>
        </plugin>

    </gazebo>

</robot>